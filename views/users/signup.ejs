<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <h1 class=" offset-3">Sign Up on Wonderlust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="title" name="username"  id = "username"  class="form-control" required>
                <div class="valid-feedback">
                    Looks Good
                </div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="title" name="email"  id = "email"  class="form-control" required>
            </div>
             <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="title" name="password"  id = "password"  class="form-control" required>
            </div>
            <button type="submit" class="btn btn-success">Sign Up</button>
        </form>

    </div>
</div>